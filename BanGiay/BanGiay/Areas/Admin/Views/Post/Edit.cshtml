
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

@model BanGiay.Post
aaaaaaaaaasddddddddddd
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("Edit", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.CreatedAt)
    @Html.HiddenFor(model => model.CreatedBy)
    @Html.HiddenFor(model => model.Img)
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper p-2">
        <section class="content">
            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Thêm loại sản phẩm</h3>
                    <div class="card-tools">
                        <a href="@Url.Action("Index", "Post")" class="btn btn-sm btn-danger">Trở về</a>
                    </div>

                </div>
                <div class="card-body">
                    <div class="form-horizontal">
                        <h4>Post</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-6">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <label>Title</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Detail</label>
                                    <div class="col-md-10">
                                        <div>
                                            @Html.TextAreaFor(model => model.Detail, new { @class = "form-control textarea" })
                                            @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>MateKey</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.MetaKey, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.MetaKey, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Chu de</label>
                                    @Html.DropDownListFor(model => model.TopId, (SelectList)ViewBag.ListCat, "[Chọn chủ đề]", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.TopId, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>MetaDesc</label>
                                    @Html.EditorFor(model => model.MetaDesc, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.MetaDesc, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Trang thai</label>
                                    @Html.DropDownListFor(model => model.Status, new[] {
                                        new SelectListItem { Text = "Xuất bản", Value = "1" },
                                        new SelectListItem { Text = "Chưa xuất bản", Value = "2" }
                                    }, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label>Hình đại diện</label>
                                    <input type="file" name="img" class="form-control" />

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <button type="submit" class="btn btn-sm btn-success"> Cập nhật </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                    <!-- /.card -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
}
<script>
    $(function () {
        // Summernote
        $('.textarea').summernote()
    })

</script>