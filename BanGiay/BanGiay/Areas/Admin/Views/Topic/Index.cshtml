@model IEnumerable<BanGiay.Topic>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <strong class="text-danger">Danh sách loại sản phẩm</strong>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <a href="@Url.Action("Create","Topic")" class="btn btn-sm btn-success">Thêm</a>
                        <a href="@Url.Action("Trash","Topic")" class="btn btn-sm btn-danger">Thùng rác</a>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Title</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Đường dẫn</th>
                            <th scope="col">Ngày tạo</th>
                            <th scope="col">Mô tả SEO</th>
                            <th scope="col">Từ khóa SEO</th>
                            <th scope="col">Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Name</td>
                                <td>@item.Slug</td>
                                <td>@item.CreatedAt</td>
                                <td>@item.MetaDesc</td>
                                <td>@item.MetaKey</td>

                                <td>
                                <td>

                                    @if (item.Status == 1)
                                    {
                                        <a href="@Url.Action("Status","Topic", new {Id = item.Id})" class="btn btn-sm btn-success"> <i class="fas fa-toggle-on text-white"></i> </a>

                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Status","Topic", new {Id = item.Id})" class="btn btn-sm btn-danger"> <i class="fas fa-toggle-on text-white"></i> </a>

                                    }

                                    <a href="@Url.Action("Edit","Topic", new {Id = item.Id})" class="btn btn-sm btn-warning"> <i class="fas fa-edit text-white"></i> </a>
                                    <a href="@Url.Action("DeTrash","Topic", new {Id = item.Id})" class="btn btn-sm btn-danger"> <i class="fas fa-trash text-white"></i> </a>
                                </td>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                Footer
            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
